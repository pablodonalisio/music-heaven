extends layout 

block content 
  h1= title 

  form(method="POST" action="")
    .form-group 
      label(for="name") Item: 
      input#name.form-control(type="text", placeholder="Guitarra el√©ctrica", name="name" value=(undefined===item ? '' : item.name) required='true')
    .form-group
      label(for="description") Description: 
      input#description.form-control(type="text", name="description" required="true" value=(undefined===item ? '' : item.description))
    .form-group
      label(for='category') Category:
      select#category.form-control(type='select', placeholder='Select category' name='category' required='true' )
        - categories.sort(function(a, b) {let textA = a.name.toUpperCase(); let textB = b.name.toUpperCase(); return (textA < textB) ? -1 : (textA > textB) ? 1 : 0;});
        for category in categories
          if item
            option(value=category._id selected=(category._id.toString()===item.category._id.toString() ? 'selected' : false) ) #{category.name}
          else
            option(value=category._id) #{category.name}
    .form-group
      label(for="price") Price: 
      input#price.form-contorl(type="number" name="price" required="true" value=(undefined===item ? '' : item.price))
    .form-group
      label(for="brand") Brand: 
      input#brand.form-control(type="text", name="brand" required="true" value=(undefined===item ? '' : item.description))
    .form-group
      label(for="stock") Stock: 
      input#stock.form-contorl(type="number" name="stock" required="true" value=(undefined===item ? '' : item.stock))
    button.btn.btn-primary(type="submit") Submit

  if errors
    ul 
     for error in errors 
      li!= error.msg